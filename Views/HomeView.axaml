<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaCallCenter.Views.HomeView">
	<TabControl>
		<TabItem Header="Phones" VerticalContentAlignment="Center">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"/>
					<ColumnDefinition Width="4*"/>
				</Grid.ColumnDefinitions>

				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="20"/>
						<RowDefinition Height="20"/>
						<RowDefinition/>
					</Grid.RowDefinitions>

					<TextBox  Grid.Row="0"  Watermark="Name" Text="{Binding ContactName}" Margin="0,20,0,10"/>
					<TextBox  Grid.Row="1" Watermark="Phone" Text="{Binding ContactPhone}" Margin="0,10,0,10"/>

					<Grid Grid.Row="2">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>
						<Button  Grid.Column="0" Content="Add" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Command="{Binding OnClickAddContact}"/>
						<Button  Grid.Column="1" Content="Call" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Command="{Binding OnClickCall}"/>
					</Grid>
				</Grid>

				<ListBox Grid.Column="1" Margin="10,10,10,10" Classes="movies"
						 SelectedItem="{Binding SelectedContact}"
						 Items="{Binding Contacts}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition/>
									<ColumnDefinition/>
								</Grid.ColumnDefinitions>
								<TextBlock Grid.Column="0" FontSize="18" Text="{Binding Name}" />
								<TextBlock Grid.Column="1" FontSize="18" Text="{Binding Phone}" />
							</Grid>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Grid>
		</TabItem>

		<TabItem Header="Sessions" VerticalContentAlignment="Center">
			<Grid>
				<ListBox  Grid.Column="2" Margin="10,10,10,10" Classes="movies" Items="{Binding Connections}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Grid>
								<TextBlock FontSize="18" Text="{Binding connectionID}" />
							</Grid>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Grid>

		</TabItem>

		<TabItem Header="Home" VerticalContentAlignment="Center">

			<StackPanel Margin="10,10,10,0">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="2*"/>
					</Grid.ColumnDefinitions>

					<StackPanel Grid.Column="0" Margin="10,10,10,10">
						<TextBlock Text="Message" HorizontalAlignment="Center" VerticalAlignment="Center"/>
						<Grid Margin="10,10,10,0">
							<Grid.RowDefinitions>
								<RowDefinition/>
								<RowDefinition/>
							</Grid.RowDefinitions>
							<TextBox Watermark="Message" Text="{Binding Message}"  Margin="0,0,50,0"/>
							<Button Content="Send" HorizontalAlignment="Right" Command="{Binding OnClickSendMessage}"/>
						</Grid>

						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition/>
								<RowDefinition/>
							</Grid.RowDefinitions>
							<Button Content="Connect" Margin="10,5,0,0" HorizontalAlignment="Left" Command="{Binding OnClickConnect}"/>
							<Button Content="Get all calls" Margin="90,5,0,0" HorizontalAlignment="Left" Command="{Binding OnClickGetAllCalls}" />
						</Grid>
					</StackPanel>

					<ListBox  Grid.Column="1" Margin="10,10,10,10" Classes="movies" Items="{Binding MyItems}">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<Grid>
									<TextBlock FontSize="18" Text="{Binding Title}" />
								</Grid>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</Grid>
			</StackPanel>
		</TabItem>
	</TabControl>
</UserControl>
