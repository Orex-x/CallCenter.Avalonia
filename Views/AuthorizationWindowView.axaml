<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AvaloniaCallCenter.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaCallCenter.Views.AuthorizationWindowView">
	<StackPanel Margin="10,10,10,10">
		<TextBlock Text="{Binding Title}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<TextBox Watermark="Login" Text="{Binding Login}" Margin="0,10,0,0"/>
		<TextBox PasswordChar="*" Watermark="Password" Text="{Binding Password}" Margin="0,10,0,0"/>
		<Button Content="Log in" HorizontalAlignment="Left" Margin="0,5,0,0" Command="{Binding OnClickLogIn}"/>
	</StackPanel>
</UserControl>
