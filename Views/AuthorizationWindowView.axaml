<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AvaloniaCallCenter.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaCallCenter.Views.AuthorizationWindowView">
	<Grid>
		<Grid HorizontalAlignment="Center" VerticalAlignment="Center">
			<StackPanel>
				<TextBlock 
					TextAlignment="Center" 
					FontSize="24" 
					Text="Authorization"/>
				<TextBox 
					Watermark="Login" 
					Text="{Binding Login}" 
					Margin="0,10,0,0" 
					Width="200"/>
				<TextBox PasswordChar="*" Watermark="Password" Width="200" Text="{Binding Password}" Margin="0,10,0,0"/>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="4*"/>
					</Grid.ColumnDefinitions>
					<Button Content="Log in" Grid.Column="0" HorizontalAlignment="Left"  Margin="10,5,0,0" Command="{Binding OnClickLogIn}"/>
					<Button Content="Registration" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,5,10,0" Command="{Binding OnClickGoToRegistration}"/>
				</Grid>
				
				
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>
